{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "src/typings/*"
    ],
    "paths": {
      "*": [
        "node_modules/*",
      ],
      "types": [
        "src/typings",
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/client/**/*"
  ]
}
